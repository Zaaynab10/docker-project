# MySQL Database Configuration
# Default: mysql (Docker service name)
MYSQL_HOST=mysql

# Default: 3306
MYSQL_PORT=3306

# Root password for MySQL
MYSQL_ROOT_PASSWORD=root_password_123

# Database name
MYSQL_DATABASE=todo_db

# Application user for database
MYSQL_USER=app_user

# Application user password
MYSQL_PASSWORD=app_password_123

# Character set for MySQL
MYSQL_CHARSET=utf8mb4

# Server Configuration
# Default: localhost
SERVER_HOST=localhost

# Default: 8080
SERVER_PORT=8080

# PHP/Apache port (Docker)
PHP_PORT=8080

# Application Configuration
# Options: development, production, testing
APP_ENV=development

# Debug mode (true/false)
APP_DEBUG=true

# Application timezone
APP_TIMEZONE=UTC

# Date/Time Configuration
# Default format for displaying dates
DATE_FORMAT=M d, Y - H:i

# Default timezone for date operations
DATE_TIMEZONE=UTC
